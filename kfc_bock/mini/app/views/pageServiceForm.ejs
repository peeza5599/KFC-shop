        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><a class="nav-link" href="/index">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/customers_auth/productsForm">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="/pageServiceForm">Service</a></li>
          <li class="nav-item"><a class="nav-link" href="/pageContactForm">Contact Us</a></li>
          <li class="nav-item"><a class="nav-link" href="/signupForm">Singup</a></li>
        </ul>
        <ul class="navbar-nav navbar-right">
          <li class="nav-item"><a class="nav-link" href="/loginForm">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/products">Cart</a></li>
        </ul>
      </div>
    </div>
  </nav>
  
  <!-- Main content -->
  <div class="main-content">
    <h1 style="font-size: 48px; color: rgb(255, 255, 255); margin: 0; text-shadow: 5px 5px 4px #000000;  ">Our Services</h1>
    <div class="service-cards">
      <div class="service-card">
