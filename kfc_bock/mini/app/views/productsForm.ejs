<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style>
    /* Add custom styles for the navigation bar and search bar */
    .navbar {
      background-color: #fffbfb;
      color: #f80f0f;
      padding: 20px;
      border: 5px solid #030303;
    }
    .navbar a {
      color: #060606;
    }
    .navbar .navbar-right {
      float: right;
      padding-right: 20px;
    }
    .search-container {
      float: right;
      margin-right: 10px;
    }
    .search-container input[type="text"] {
      padding: 6px;
      border: none;
      width: 200px;
    }
    .search-container button {
      padding: 6px 10px;
      background: #333;
      color: #fff;
      border: none;
      cursor: pointer;
    }
    /* Add custom styles for the main content */
    .main-content {
      
      padding: 20px;
      text-align: center;
    }
    body {
      background-color: #ef3d44;
      border: 10px solid #000000;
    }

    .card-title {
    font-size: 18px; /* ปรับขนาดตัวหนังสือของชื่อสินค้า */
    color: #000000;
}
    .card-text {
      font-size: 16px; 
    color: #000000;
    }
  </style>
  <style>
    .left-aligned-text {
      text-align: left;
    }
  </style>
</head>
<body>
  <!-- Navigation bar -->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
       <h4> <a class="navbar-brand" href="#">Bonk-KFC</a></h4>
      </div>
      <h4><ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
      </ul></h4>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <% for(var i=0; i < items.length; i++) { %>
        <% if (i % 3 === 0) { %>
          <div class="col-md-4 mx-auto text-center">
        <% } else if (i % 3 === 1) { %>
          <div class="col-md-4 mx-auto text-center">
        <% } else { %>
          <div class="col-md-4 mx-auto text-center">
        <% } %>
          <div class="card">
            <style>
              .product-image {
                 width: 300px;
                 height: 300px;
                 border: 5px solid #000000;
                 box-shadow: 0 8px 15px rgba(10, 10, 10, 0.979);
                 
              }
            </style>
            <form action="/loginForm">
              <br>
              <img class="product-image" src="<%= '/images/imageDB/' + items[i].Image %>" alt="product image">
              <div class="card-body">
                <h5 class="card-title"><%= items[i].ProductName %></h5>
                <p class="card-text">Price: <%= items[i].ProductPrice %></p>
                <button class="add-to-cart-button" name="ProductID" value="<%= items[i].ProductID %>">Add to Cart</button>

                <style>
                  .add-to-cart-button {
                    padding: 10px 20px;
                    background-color: #000000;
                    color: #ffffff;
                    border: none;
                    border-radius: 5px;
                    cursor: pointer;
                  }
                </style>
              </div>
            </form>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Additional JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var addToCartButtons = document.querySelectorAll('.add-to-cart-button');

      addToCartButtons.forEach(function(button) {
        button.addEventListener('click', function() {
          window.location.href = '/loginForm';
        });
      });
    });
  </script>
</body>
</html>
